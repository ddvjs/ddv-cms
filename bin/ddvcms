#!/usr/bin/env node
'use strict'
// 标题
process.title = 'ddvCmsBin'
const defaultCommand = 'dev'
const path = require('path')
const spawn = require('cross-spawn').spawn
const commands = new Set([
  'start',
  'ddvstart',
  'dev',
  'ddvdev',
  'build',
  'generate'
])
var cmd = process.argv[2]
if (commands.has(cmd)) {
  process.argv.splice(2, 1)
} else {
  cmd = defaultCommand
}
if ([
  'build',
  'generate'
].indexOf(cmd) > -1) {
  var bin = path.join(__dirname, 'ddvcms-' + cmd)
  var proc = spawn(bin, process.argv.slice(2), { stdio: 'inherit', customFds: [0, 1, 2] })
  proc.on('close', (code) => process.exit(code))
  proc.on('error', (err) => {
    console.error(err) // eslint-disable-line no-console
    process.exit(1)
  })
} else if (cmd === 'start' || cmd === 'ddvstart') {
  process.env.NODE_ENV = 'production' // development
  require('../lib/server.js')
} else if (cmd === 'dev' || cmd === 'ddvdev') {
  require('../lib/server.js')
} else {
  console.error('This parameter is not supported')
  process.exit(1)
}
